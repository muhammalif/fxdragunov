{
  "name": "fxdragunov",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "landing-page",
    "dashboard-admin"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:landing\" \"npm run dev:admin\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:landing": "cd landing-page && npm run dev",
    "dev:admin": "cd dashboard-admin && npm run dev",
    "build": "npm run build:backend && npm run build:landing && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:landing": "cd landing-page && npm run build",
    "build:admin": "cd dashboard-admin && npm run build",
    "start": "cd backend && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}