{
  "version": 2,
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"],
        "buildCommand": "cd backend && npm install --force && npm run build"
      }
    },
    {
      "src": "landing-page/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd landing-page && npm install --force && npm run build"
      }
    },
    {
      "src": "dashboard-admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd dashboard-admin && npm install --force && npm run build"
      }
    }
  ]
}